<style>
.dropdown-menu .menuitem {
  font-size: 16px;
  line-height: 26px;
}
.dropdown-menu .menuitem .glyphicon-ok {
  display:none;
}
.dropdown-menu .menuitem.checked .glyphicon-ok {
  display:inline;
}
</style>
{{#each items}}
<div style="float:right; position:relative;">
  {{#if menu}}
  <div data-toggle="dropdown" style="background: url(img/{{icon}}) no-repeat 0; width: 40px; margin-top: 8px; height: 35px;">
    {{#if text}}{{text}}{{else}}&nbsp;{{/if}}
  </div>
  <ul class="dropdown-menu" role="menu" style="right: 0; left: auto;">
      {{#each menu}}
        {{#if separator}}
        <li role="presentation" class="divider"></li>
        {{else}}
        <li><a id="{{id}}" class="menuitem {{#if checked }}checked{{/if}}"><span class="glyphicon glyphicon-ok"></span> {{text}}</a></li>
        {{/if}}
      {{/each}}
  </ul>  
  </div>
  {{else}}
  <div id="{{id}}" class="menuitem" style="background: url(img/{{icon}}) no-repeat 0; width: 40px; margin-top: 8px; height: 35px;">
    {{#if text}}{{text}}{{else}}&nbsp;{{/if}}
  </div>
  {{/if}}
</div>
{{/each}}
