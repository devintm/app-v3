<div class="page">
  <div class="pull-right">
    <select class="form-control" id="locale" style="width: auto">
      {{#each locales}}
      <option value="{{code}}">{{name}}</option>
      {{/each}}
    </select>
  </div>
  <div>
    <button id="demo_button" type="submit" class="btn btn-lg btn-info">{{T "Demo"}}</button> 
    <span class="glyphicon glyphicon-arrow-left"></span> {{T "Try out app"}}
  <div>
  <br>
  <h3>{{T "Login to mWater"}}</h3>
  <div id="social_logins">
    <div class="text-center" style="line-height: 50px;">
      <button type="button" class="social-login zocial google" data-provider="google">{{T "Sign in with Google"}}</button>
      &nbsp; &nbsp;
      <button type="button" class="social-login zocial facebook" data-provider="facebook">{{T "Sign in with Facebook"}}</button>
      &nbsp; &nbsp;
      <button type="button" class="social-login zocial windows" data-provider="windowslive">{{T "Sign in with Windows Live"}}</button>
    </div>
    <br>
    <div class="text-center">{{T "-- or --"}}</div>
  </div>
  <form id="form_login">
    <div class="form-group">
        <label for="login_username">{{T "Username or Email"}}</label>
        <input class="form-control" id="login_username" type="text" autocapitalize="off" autocorrect="off" spellcheck="false" placeholder="{{T "Username"}}" />
    </div>
    <div class="form-group">
        <label for="login_password">{{T "Password"}}</label>
        <input class="form-control" id="login_password" type="password" placeholder="{{T "Password"}}" />
    </div>
    <div>
        <button id="login_button" type="submit" class="btn btn-primary btn-lg btn-block">{{T "Login"}}</button>
    </div>
  </form>

  <br>
  <p class="text-center"> - {{T "or"}} - </p>

  <div>
    <button id="signup_button" class="btn btn-lg btn-success btn-block">{{T "Signup"}}</button>
  </div>
<div>

<!-- Covers the screen to prevent confusion during delays in social login -->
<div id="cover" style="position:fixed; top:0; left:0; background:rgba(0,0,0,0.6); z-index:10000; width:100%; height:100%; display:none;"></div>